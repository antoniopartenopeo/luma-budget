{
  "name": "numa-budget",
  "version": "0.4.1",
  "description": "NUMA Budget desktop/mobile shell and web app",
  "author": "NUMA Team",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "next dev",
    "dev:3000": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "desktop:dev": "concurrently -k \"npm run dev:3000\" \"wait-on http://localhost:3000 && cross-env NUMA_ELECTRON_START_URL=http://localhost:3000 electron electron/main.cjs\"",
    "desktop:build:mac": "electron-builder --mac",
    "mobile:add:ios": "npx cap add ios",
    "mobile:add:android": "npx cap add android",
    "mobile:sync": "npx cap sync",
    "mobile:open:ios": "npx cap open ios",
    "mobile:open:android": "npx cap open android",
    "native:doctor": "bash scripts/native/doctor.sh",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "release:validate": "tsx scripts/release/validate-release.ts",
    "governance:quick-check": "bash scripts/audit/governance-quick-check.sh",
    "governance:enforce": "bash scripts/audit/governance-enforce.sh",
    "goals:validate": "vitest run src/features/goals/validation/",
    "goals:report": "vitest run src/features/goals/validation/ --reporter=verbose",
    "validate": "npm run governance:quick-check",
    "doe:verify": "npm run governance:enforce && npm run test:run && npm run lint && npm run validate && npm run build"
  },
  "dependencies": {
    "@capacitor/core": "^8.1.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.5",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.555.0",
    "next": "16.1.6",
    "react": "19.2.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/ios": "^8.1.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.3.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.numa.budget.desktop",
    "productName": "NUMA Budget",
    "directories": {
      "output": "dist-desktop",
      "buildResources": "build-resources"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build-resources/icon.icns",
      "category": "public.app-category.finance"
    }
  }
}
